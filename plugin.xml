<?xml version="1.0" encoding="utf-8"?>
<plugin
    xmlns="http://apache.org/cordova/ns/plugins"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="valantic-cordova-plugin-zebra-printer"
    version="1.0.0">

        <name>valantic-cordova-plugin-zebra-printer</name>
        <description>Cordova plugin for Zebra Link-OS printers (WiFi/Bluetooth)</description>
        <license>MIT</license>
        <keywords>cordova, zebra, printer, link-os, valantic</keywords>

        <!-- No global plugin variable required; Android-only preference lives inside the android platform block. -->

    <!-- JS bridge -->
    <js-module src="www/ZebraPrinter.js" name="ZebraPrinter">
        <clobbers target="ZebraPrinter"/>
    </js-module>

    <!-- ANDROID -->
    <platform name="android">

        <!-- Register plugin in config.xml -->
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="ZebraPrinter">
                <param name="android-package" value="com.valantic.zebraprinter.ZebraPrinter"/>
            </feature>
        </config-file>

        <!-- Zebra SDK jar/aar â€“ place the JAR into the Android app libs folder so Gradle includes it -->
        <!-- Use resource-file to copy the JAR into platforms/android/app/libs on modern cordova-android -->
        <resource-file src="src/android/libs/ZSDK_ANDROID_API.jar" target="app/libs/ZSDK_ANDROID_API.jar" />
        <!-- Also add as a framework so cordova adds it to Gradle dependencies -->
        <framework src="src/android/libs/ZSDK_ANDROID_API.jar" custom="true" />

        <!-- Our plugin implementation -->
        <source-file
            src="src/android/ZebraPrinter.java"
            target-dir="src/com/valantic/zebraprinter"/>
        <!-- Copy JAR to legacy `libs/` as well for older cordova-android consumers -->
        <resource-file src="src/android/libs/ZSDK_ANDROID_API.jar" target="libs/ZSDK_ANDROID_API.jar" />
    </platform>

    <!-- iOS -->
    <platform name="ios">

        <config-file target="config.xml" parent="/*">
            <feature name="ZebraPrinter">
                <param name="ios-package" value="ZebraPrinter"/>
            </feature>
        </config-file>

        <!-- iOS SDK: prefer the provided XCFramework; fall back to static .a plus headers in FATLib -->
        <framework src="src/ios/xcframework/ZSDK_API.xcframework" custom="true" embed="true" />
        <framework src="src/ios/FATLib/libZSDK_API.a" custom="true" />

        <!-- Copy individual SDK headers so the static .a fallback can be used by consumers -->
        <header-file src="src/ios/FATLib/include/DiscoveredPrinter.h" />
        <header-file src="src/ios/FATLib/include/DiscoveredPrinterNetwork.h" />
        <header-file src="src/ios/FATLib/include/FieldDescriptionData.h" />
        <header-file src="src/ios/FATLib/include/FileUtil.h" />
        <header-file src="src/ios/FATLib/include/FormatUtil.h" />
        <header-file src="src/ios/FATLib/include/GraphicsUtil.h" />
        <header-file src="src/ios/FATLib/include/MagCardReader.h" />
        <header-file src="src/ios/FATLib/include/MfiBtPrinterConnection.h" />
        <header-file src="src/ios/FATLib/include/NetworkDiscoverer.h" />
        <header-file src="src/ios/FATLib/include/PrinterStatus.h" />
        <header-file src="src/ios/FATLib/include/PrinterStatusMessages.h" />
        <header-file src="src/ios/FATLib/include/ResponseValidator.h" />
        <header-file src="src/ios/FATLib/include/SGD.h" />
        <header-file src="src/ios/FATLib/include/SmartCardReader.h" />
        <header-file src="src/ios/FATLib/include/TcpPrinterConnection.h" />
        <header-file src="src/ios/FATLib/include/ToolsUtil.h" />
        <header-file src="src/ios/FATLib/include/ZebraErrorCode.h" />
        <header-file src="src/ios/FATLib/include/ZebraPrinter.h" />
        <header-file src="src/ios/FATLib/include/ZebraPrinterConnection.h" />
        <header-file src="src/ios/FATLib/include/ZebraPrinterFactory.h" />
        <header-file src="src/ios/FATLib/include/ZplPrintMode.h" />

        <source-file src="src/ios/ZebraPrinter.h" />
        <source-file src="src/ios/ZebraPrinter.m" />
    </platform>

</plugin>
